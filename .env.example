# PharmaPOS NG - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_PATH=pharmapos.db

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_COUNT=10
BACKUP_DIR=./backups

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_DIR=./logs

# ============================================================================
# PAYMENT GATEWAY CONFIGURATION
# ============================================================================

# Paystack (Nigerian Payment Gateway)
# Get your keys from: https://dashboard.paystack.com/#/settings/developer
PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
# For production, use: pk_live_xxx and sk_live_xxx

# Flutterwave (Alternative Payment Gateway)
# Get your keys from: https://dashboard.flutterwave.com/dashboard/settings/apis
FLW_PUBLIC_KEY=FLWPUBK_TEST-xxxxxxxxxxxxxxxxxxxxx
FLW_SECRET_KEY=FLWSECK_TEST-xxxxxxxxxxxxxxxxxxxxx
# For production, use live keys

# ============================================================================
# EMAIL NOTIFICATION CONFIGURATION (Optional)
# ============================================================================

# SMTP Settings for Email Notifications
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email Recipients
ALERT_EMAIL_TO=pharmacy@example.com
ALERT_EMAIL_FROM=noreply@pharmapos.ng

# ============================================================================
# SMS NOTIFICATION CONFIGURATION (Optional)
# ============================================================================

# Twilio (International SMS)
# Get credentials from: https://console.twilio.com/
TWILIO_ENABLED=false
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+1234567890

# Termii (Nigerian SMS Service)
# Get API key from: https://termii.com/
TERMII_ENABLED=false
TERMII_API_KEY=TLxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TERMII_SENDER_ID=PharmaPOS

# ============================================================================
# ALERT THRESHOLDS
# ============================================================================

# Inventory Alerts
EXPIRY_WARNING_DAYS=30
LOW_STOCK_THRESHOLD=10
CRITICAL_STOCK_THRESHOLD=5

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=60

# Password requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=false

# Account lockout after failed login attempts
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# ============================================================================
# LICENSE CONFIGURATION
# ============================================================================

# License key (provided after purchase)
LICENSE_KEY=

# License type: perpetual, subscription, trial
LICENSE_TYPE=trial

# For subscription licenses
LICENSE_EXPIRY_DATE=

# ============================================================================
# PRINTER CONFIGURATION
# ============================================================================

# Default printer type: FILE, USB, SERIAL, NETWORK, SYSTEM
DEFAULT_PRINTER_TYPE=SYSTEM

# Thermal printer settings (if using USB/Serial)
PRINTER_VENDOR_ID=0x04b8
PRINTER_PRODUCT_ID=0x0202
PRINTER_SERIAL_PORT=COM3
PRINTER_BAUDRATE=9600

# Network printer settings
PRINTER_NETWORK_HOST=192.168.1.100
PRINTER_NETWORK_PORT=9100

# ============================================================================
# CLOUD SYNC CONFIGURATION (Future Feature)
# ============================================================================

CLOUD_SYNC_ENABLED=false
CLOUD_SYNC_URL=https://api.pharmapos.ng/sync
CLOUD_SYNC_API_KEY=

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Currency symbol
CURRENCY_SYMBOL=â‚¦

# Locale
LOCALE=en_NG

# Date format
DATE_FORMAT=%Y-%m-%d
DATETIME_FORMAT=%Y-%m-%d %H:%M:%S

# ============================================================================
# DEVELOPMENT/DEBUG SETTINGS (Remove in production)
# ============================================================================

# Debug mode (set to false in production)
DEBUG=false

# Enable SQL query logging
SQL_ECHO=false

# Enable performance profiling
ENABLE_PROFILING=false

# ============================================================================
# NOTES
# ============================================================================
# 
# 1. Never commit the actual .env file to version control
# 2. Keep your API keys and passwords secure
# 3. Use strong passwords for SMTP and database encryption
# 4. For Gmail SMTP, you need to create an "App Password":
#    https://support.google.com/accounts/answer/185833
# 5. Test email/SMS settings before enabling in production
# 6. Backup this file along with your database
#
